<!-- post display -->
<div class="container-fluid" id="post-page">
    <div class="row justify-content-center">
        <div class="col-12 col-md-11">
            <div class="card" id="post-specifics">
                <div class="card-header">
                    <div class="row">
                        <div class="col-12 col-sm-10 col-lg-8 my-auto">
                            <h2>{{post.title}}</h2>
                        </div>
                        <div class="col-12 col-sm-2 col-lg-4 my-auto justify-content-end" id="post-date-author">
                            Posted by {{post.user.username}} on {{ format_date post.dateCreated }}
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">{{post.contents}}</p>
                </div>
            </div>
        </div>
    </div>
    {{#if isAuthored}}
    <div class="row justify-content-center" id="optional-btns">
        <div class="col-3 col-md-2 col-lg-1" id="update_hold">
            <button class="update_post" data-id='{{post.id}}'>UPDATE</button>
        </div>
        <div class="col-3 col-md-2 col-lg-1">
            <button class="delete_post" data-id='{{post.id}}'>DELETE</button>
        </div>
    </div>
    {{/if}}
    <div class="row justify-content-center">
        <div class="col-12 col-md-11">
            <div class="card" id="post-comments">
                <div class="card-header">
                    <div class="col-12 my-auto row justify-content-center">
                                <h2 class="justify-content-center">Comments</h2>
                    </div>
                </div>
                <div class="card-body">
                    {{#each post.comments as |comment|}}
                        <div class="row justify-content-start">
                            <p>{{comment.comment}}</p>
                            <br>
                            <p> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp - {{comment.user.username}}, {{format_date comment.dateCreated}}</p>
                            <br>
                            <br>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{#if logged_in}}
    <div class="row justify-content-center">
        <div class="col-12 col-md-11">
            <form>
                <div class="card" id="post-comment-adder">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-6 col-sm-7 col-lg-8">
                                        <h2 id="make-a-comment">Make a Comment</h2>
                            </div>
                            <div class="col-6 col-sm-5 col-lg-4 justify-content-end" id="comment-button-holder">
                                        <button id='submit-comment'>ADD</button>                  
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                        <input
                            id="comment-content"
                            class="col-11"
                        />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    {{/if}}
    <div class="row" id="rest-of-page"></div>
</div>
<script src='/js/postPage.js'></script>
