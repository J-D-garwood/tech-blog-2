<!-- homepage display -->
<div class="container-fluid" id="homepage">
    {{#each posts as |post|}}
    <div class="row justify-content-center">
        <div class="col-12 col-md-11">
            <a
            href='/post/{{post.id}}'
            >
            <div class="card" id="feed-posts">
                <div class="card-header">
                    <div class="row">
                        <div class="col-12 col-sm-10 col-lg-8 my-auto">
                            <h2>{{post.title}}</h2>
                        </div>
                        <div class="col-12 col-sm-2 col-lg-4 my-auto justify-content-end" id="post-date-author">
                            Posted by {{post.user.username}} on {{ format_date post.dateCreated }}
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">{{post.contents}}</p>
                </div>
            </div>
            </a>
        </div>
    </div>
    {{/each}}
    <div class="row" id="rest-of-page"></div>
</div>
